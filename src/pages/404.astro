---
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE_TITLE } from '../consts';
import notFoundStylesHref from '../styles/pages/not-found.css?url';

---

<BaseLayout
	title={`404 | ${SITE_TITLE}`}
	description="Page not found"
	variantFonts={true}
	stylesheets={[notFoundStylesHref]}
	mainClass="not-found-main"
>
			<div class="bg-404" aria-hidden="true">
				<span class="bg-404-text">404</span>
			</div>

			<section class="not-found-content">
				<p class="eyebrow">Error 404</p>
				<h1>Page Not Found</h1>

				<div class="message">
					<p>This page has been removed from all storefronts. No reason was given.</p>
					<p>A FAQ will be posted within 6-8 business weeks. We thank you for your purchase.</p>
				</div>

				<div class="divider" aria-hidden="true">* * *</div>

				<div class="actions">
					<a class="btn primary" href="/">Back Home</a>
					<a class="btn" href="/reviews">Browse Reviews</a>
					<a class="btn" href="/bossfeatures">Boss Features</a>
				</div>

				<div class="suggestions">
					<p class="suggestions-label">You might be looking for</p>
					<div class="suggestion-links">
						<a class="suggestion-link" href="/reviews/clair-obscur-expedition-33">Expedition 33</a>
						<a class="suggestion-link" href="/reviews/metaphor-refantazio">Metaphor: ReFantazio</a>
						<a class="suggestion-link" href="/reviews/xenoblade-chronicles-3">Xenoblade Chronicles 3</a>
						<a class="suggestion-link" href="/reviews/persona-5-royal">Persona 5 Royal</a>
					</div>
				</div>
			</section>
</BaseLayout>
