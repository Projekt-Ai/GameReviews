---
import { type CollectionEntry, render } from 'astro:content';
import BossFeaturePost from '../../layouts/BossFeaturePost.astro';
import { getVisibleBossFeatures } from '../../utils/boss-features';
import { contentVisibilityOptions } from '../../utils/content';

export async function getStaticPaths() {
	const posts = await getVisibleBossFeatures(contentVisibilityOptions(import.meta.env.DEV));
	return posts.map((post) => ({
		params: { slug: post.id },
		props: post,
	}));
}
type Props = CollectionEntry<'bossfeatures'>;

const post = Astro.props;
const { Content } = await render(post);
---

<BossFeaturePost {...post.data} commentThreadId={`bossfeatures/${post.id}`}>
	<Content />
</BossFeaturePost>
